<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, url: admin_user_path(@user.id), local: true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
     <div class="form-group">
        <%= f.label :avatar %>
        <%= image_tag @user.get_avatar(100,100) %><br>
        <%= f.file_field :avatar, class: "form-control-file avatar", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :role_id %>
        <%= f.collection_select :role_id, Role.all, :id, :name, options = { include_blank: false, selected: :role_id }, class: "form-control role_id" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
