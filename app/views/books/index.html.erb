<h2>Books</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Genre</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to(book) do %>
          <%= image_tag book.get_image(100,100) %>
          <% end %><br>
          <%= link_to book.user.name, user_path(book.user_id) %>
        </td>
        <td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= book.genre %></td>
      </tr>
    <% end %>
  </tbody>
</table>
