<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%#= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%#= render 'books/form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Category</th>
            <th>いいね数</th>
            <th>コメント数</th>
            <th>閲覧数</th>
            <th>評価</th>
            <% if @book.user.id == current_user.id %>
              <th></th>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.get_image(63,63) %><br>
              <%= link_to public_user_path(@book.user) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, public_book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td><%= @book.genre %></td>
            <td id="favorite_btn_<%= @book.id %>">
              <%#= render "favorites/favorite_btn", book: @book %>
            </td>
            <td class="book_comments_count">
              <%#= render "book_comments/comments_count", book: @book %>
            </td>
            <td><p class="view-count"><%#= @book.view_counts.count %></p></td>
            <td>
            </td>
            <% if @book.user.id == current_user.id %>
              <td><%= link_to 'Edit', edit_public_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
              <td><%= link_to 'Destroy', public_book_path(@book), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
